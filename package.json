{
  "name": "@9renpoto/slides",
  "description": "my slides",
  "version": "0.0.0",
  "dependencies": {
    "impress.js": "^0.6.0"
  },
  "devDependencies": {
    "@9renpoto/eslint-config": "^2.3.0",
    "@types/extract-text-webpack-plugin": "^3.0.0",
    "@types/impress": "^0.5.29",
    "@types/node": "^8.5.5",
    "@types/webpack": "^3.0.13",
    "awesome-typescript-loader": "^3.4.1",
    "concurrently": "^3.5.1",
    "cpx": "^1.5.0",
    "css-loader": "^0.28.7",
    "extract-text-webpack-plugin": "^3.0.2",
    "gh-pages": "^1.1.0",
    "husky": "^0.14.3",
    "lint-staged": "^6.0.0",
    "npm-run-all": "^4.1.2",
    "prettier-eslint-cli": "^4.7.0",
    "pug-cli": "^1.0.0-alpha6",
    "pug-lint": "^2.5.0",
    "pug-lint-config-clock": "^2.0.0",
    "rimraf": "^2.6.2",
    "style-loader": "^0.19.1",
    "ts-loader": "^3.0.2",
    "ts-node": "^4.0.1",
    "typescript": "^2.6.2",
    "typescript-eslint-parser": "^11.0.0",
    "vnu-jar": "^17.11.1",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.9.7"
  },
  "license": "MIT",
  "lint-staged": {
    "*.ts": [
      "prettier-eslint --parser typescript --write",
      "eslint --ext=ts,tsx",
      "git add"
    ],
    "*.pug": [
      "pug-lint"
    ],
    "*.md": [
      "prettier --parser markdown --write",
      "git add"
    ]
  },
  "main": "n/a",
  "private": true,
  "scripts": {
    "build": "run-s clean build:* copy clean:html",
    "build:html": "pug src --out dist",
    "build:webpack": "webpack",
    "clean": "rimraf dist",
    "clean:html": "find dist -name '*.html' | grep -v index.html | xargs rm",
    "copy": "cpx \"src/**/*.png\" dist",
    "deploy": "gh-pages -d dist",
    "dev": "webpack-dev-server --content-base dist/",
    "lint": "run-p lint:*",
    "lint:html": "npm run build:html -- -P && npm run clean:html &&  ts-node validate.ts",
    "lint:pug": "pug-lint src",
    "precommit": "lint-staged",
    "predeploy": "npm run build",
    "start": "concurrently --kill-others 'npm run w:pug' 'npm run dev'",
    "test": "run-p test:*",
    "test:build": "npm run build",
    "w:pug": "npm run build:html -- -w"
  }
}
